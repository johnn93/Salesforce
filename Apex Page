                </svg>
                </apex:image>
                  <apex:commandLink value="Set as Primary" rendered="{!if(ct.Is_Primary_Contact__c==false,true,false)}" onclick="return confirm('are you sure to set {!ct.Name} as the primary?')"  />
           </apex:column>
        </apex:pageBlockTable>
            </apex:pageBlockSection>
        <apex:outputText value="{!ssc.PageNumber}">Page Number: </apex:outputText>
